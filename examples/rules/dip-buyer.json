    {
      "name": "Extreme opportunity buyer",
      "conditions": [
        { "field": "price_drop", "operator": ">", "threshold": 10, "logic": "OR" },
        { "field": "volume_spike", "operator": ">", "threshold": 300, "logic": "OR" }
      ],
      "action": "buy",
      "amount": 0.02,
      "weight": 40,
      "cooldownSeconds": 45
    },
    {
      "name": "Take profit on rally",
      "conditions": [
        { "field": "price_rise", "operator": ">", "threshold": 7 }
