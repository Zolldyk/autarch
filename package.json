{
  "name": "autarch",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "npm run demo",
    "demo": "pnpm run build && pnpm -F @autarch/demo start",
    "interactive": "DEMO_MODE=true pnpm run build && pnpm -F @autarch/demo start:interactive",
    "test": "vitest run",
    "lint": "eslint packages/*/src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^10",
    "@types/node": "^25.3.0",
    "eslint": "^10",
    "jiti": "^2.6.1",
    "typescript": "~5.9",
    "typescript-eslint": "^8",
    "vitest": "^4"
  }
}
